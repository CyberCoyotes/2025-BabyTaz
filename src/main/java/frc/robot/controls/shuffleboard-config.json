{
  "tabPane": [
    {
      "title": "Vision",
      "autoPopulate": false,
      "autoPopulatePrefix": "",
      "widgetPane": {
        "gridSize": 32.0,
        "showGrid": true,
        "hgap": 16.0,
        "vgap": 16.0,
        "widgets": [
          {
            "type": "Grid Layout",
            "title": "Target Status",
            "gwidth": 3,
            "gheight": 4,
            "layout": "List Layout",
            "x": 0,
            "y": 0,
            "properties": {
              "Number of columns": 1,
              "Number of rows": 4
            },
            "content": {
              "0,0": {
                "type": "Boolean Box",
                "title": "Has Target",
                "field": "Elastic/Vision/LL4/HasTarget",
                "colorWhenTrue": "#00FF00",
                "colorWhenFalse": "#FF0000"
              },
              "0,1": {
                "type": "Text View",
                "title": "Tag ID",
                "field": "Elastic/Vision/LL4/TagID"
              },
              "0,2": {
                "type": "Text View",
                "title": "Vision State",
                "field": "Elastic/Vision/State"
              },
              "0,3": {
                "type": "Text View",
                "title": "Alignment State",
                "field": "Elastic/Vision/AlignmentState"
              }
            }
          },
          {
            "type": "Grid Layout",
            "title": "Target Metrics",
            "gwidth": 3,
            "gheight": 4,
            "layout": "List Layout",
            "x": 3,
            "y": 0,
            "properties": {
              "Number of columns": 1,
              "Number of rows": 4
            },
            "content": {
              "0,0": {
                "type": "Linear Progress",
                "title": "Detection Rate",
                "field": "Elastic/Vision/Stats/DetectionRate",
                "min": 0.0,
                "max": 1.0
              },
              "0,1": {
                "type": "Number Bar",
                "title": "Distance (cm)",
                "field": "Elastic/Vision/LL4/Distance_CM",
                "min": 0.0,
                "max": 500.0,
                "center": 250.0
              },
              "0,2": {
                "type": "Number Bar",
                "title": "Yaw Angle (deg)",
                "field": "Elastic/Vision/LL4/YawAngle_Deg",
                "min": -30.0,
                "max": 30.0,
                "center": 0.0
              },
              "0,3": {
                "type": "Number Bar",
                "title": "Horizontal Offset (cm)",
                "field": "Elastic/Vision/LL4/HorizontalOffset_CM",
                "min": -100.0,
                "max": 100.0,
                "center": 0.0
              }
            }
          },
          {
            "type": "Graph",
            "title": "Vision Performance",
            "field": ["Elastic/Vision/LL4/Distance_CM", "Elastic/Vision/Stats/DetectionRatePercent"],
            "x": 6,
            "y": 0,
            "width": 6,
            "height": 4,
            "properties": {
              "Visible time": 30.0,
              "Unit": "seconds"
            }
          }
        ]
      }
    }
  ]
}
